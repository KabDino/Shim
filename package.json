{
  "name": "shim",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "rs": "del node_modules && del package-lock.json && npm i && npm start -- --reset-cache",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-native": "0.68.1",
    "react-native-flipper": "^0.144.0",
    "react-redux": "^8.0.1",
    "redux": "^4.2.0",
    "redux-flipper": "^2.0.1",
    "redux-thunk": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.4.1",
    "metro-react-native-babel-preset": "^0.67.0",
    "react-test-renderer": "^17.0.2"
  },
  "jest": {
    "preset": "react-native"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
